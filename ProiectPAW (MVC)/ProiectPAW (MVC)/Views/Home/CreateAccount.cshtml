<html>
<head>
    <title>Create Account</title>
    <link rel="stylesheet" type="text/css" href="~/css/Login.css">
</head>
<body>
    <div class="login-box">
        <h2>Create Account</h2>
        <form action="@Url.Action("Create", "Addresses")" method="post">
            <div class="user-box">
                <label>Country&nbsp;</label>
                <input type="text" name="Country" required="">
            </div>
            <div class="user-box">
                <label>County&nbsp;</label>
                <input type="text" name="County" required="">
            </div>
            <div class="user-box">
                <label>City&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="text" name="City" required="">
            </div>
            <div class="user-box">
                <label>Postalcode&nbsp;&nbsp;&nbsp;</label>
                <input type="number" name="Postalcode" required="">
            </div>
            <div class="user-box">
                <label>Block&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="number" name="Block" required="">
            </div>
            <div class="user-box">
                <label>Floor&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="number" name="Floor" required="">
            </div>
            <div class="user-box">
                <label>Apartment&nbsp;&nbsp;&nbsp;</label>
                <input type="number" name="Apartment" required="">
            </div>
            <div class="user-box">
                <label>Staircase&nbsp;&nbsp;&nbsp;</label>
                <input type="number" name="Staircase" required="">
            </div>
            <div class="user-box">
                <label>Street&nbsp;&nbsp;&nbsp;</label>
                <input type="text" name="Street" required="">
            </div>
            <a href="/Login">Already have an account?</a>
            <input type="submit" name="create_account" value="Create Account">
        </form>
    </div>
</body>
</html>
