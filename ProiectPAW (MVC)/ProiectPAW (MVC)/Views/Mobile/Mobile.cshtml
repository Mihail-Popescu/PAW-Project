<head>
    <style>
        .plan-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 100px;
        }

        .plan {
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Adjust this value to change the spacing */
            align-items: center;
            width: 300px;
            height: 500px;
            border-radius: 10px;
            background-color: lightcoral;
            color: white; /* Set the text color to white */
            border: none;
            box-shadow: 2px 2px 5px #888;
            margin: 10px;
            padding: 20px; /* Add padding for spacing */
            text-align: center; /* Center-align the text */
        }

            .plan:hover {
                filter: brightness(85%);
            }

        .plan-title {
            font-weight: bold;
            font-size: 20px;
            margin-top: 10px;
        }

        .plan-description {
            font-size: 16px;
            margin-top: 5px;
        }

        .plan-price {
            font-size: 16px;
            margin-top: 5px;
            font-weight: bold;
        }

        .plan-image {
            width: 80%;
            max-height: 150px;
            object-fit: contain;
            margin-top: 10px;
            border-radius: 5%;
        }

        .plan-button {
            margin-top: 10px;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .plan-add-to-cart {
            background-color: #5cb85c;
        }

        .plan-buttons-container {
            display: flex;
            justify-content: space-around;
            width: 100%;
            margin-top: 10px;
        }
    </style>
</head>

<div class="plan-container">
    @foreach (var mobilePlan in Model)
    {
        <div class="plan">
            <div class="plan-title">@mobilePlan.Name</div>
            <div class="plan-description">@mobilePlan.Description</div>
            <div class="plan-price">@mobilePlan.Price</div>
            <img class="plan-image" src="@mobilePlan.ImageUrl" alt="Plan Image">
            <div class="plan-buttons-container">
                <form method="post" action="/Cart/AddToCart">
                    <input type="hidden" name="productId" value="@mobilePlan.ProductId" />
                    <button type="submit" class="plan-button plan-add-to-cart">Add to Cart</button>
                </form>
            </div>
        </div>
    }
</div>
